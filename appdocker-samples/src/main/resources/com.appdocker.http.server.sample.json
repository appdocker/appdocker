{
  "main": "com.appdocker.web.HttpServerVerticle",
  "options": {

    "config" : {

      "controllers": [
        "com.appdocker.sample.API",
        "com.appdocker.sample.API2",
        "com.appdocker.sample.static"
      ],

      "port":8080,

      "cookie":true,

      "error.template":"webroot/appdocker-sample-error.html",

      "error.handlers" : [
        {
          "main" : "com.appdocker.web.handler.APIErrorHandler",

          "path" : "/api2/*",

          "config" : {

            "template" : {
              "error" : "{errorCode}",
              "message" : "{errorMessage}"
            }
          }
        },

        {
          "main" : "com.appdocker.web.handler.HTMLErrorHandler",

          "path" : "/*",

          "config" : {

            "template" : "webroot/appdocker-sample-error.html"
          }
        }
      ]
    }
  }
}